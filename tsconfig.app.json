{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "./auto-imports.d.ts",
    "public/theme.js",
    "vite.config.ts",
    "types/*.d.ts",
  ],
  "exclude": ["dist", "**/*.js", "node_modules"],
  "compilerOptions": {
    "resolveJsonModule": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["es2022", "DOM"]
  }
}
